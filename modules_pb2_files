---
- name: working with files                             #play name
  hosts: all                                           #nodes
  become: yes                                          #work with root privelages
  tasks:                                         
   - name: copy file                                  #first task name
     copy:                                            #module
       src: /home/ubuntu/ansible_repo/testfile.txt    #source path
       dest: /media/                                  #destination path
       owner: ubuntu
       group: ubuntu
       mode: u-x, g-wx, o-wx
